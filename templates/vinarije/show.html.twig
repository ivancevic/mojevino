{% extends 'base.html.twig' %}


{%block title %}Portal MojeVino - Vas vodic kroz vinski svet{% endblock %}

{% block body %}
    <header>
        {{ include('inc/navbar-rest.html.twig') }}
    </header>
    
    {# Vinarije-list section #}
    <section id="vinarijeList">
        <div class="container">
            <div class="row vinarije-list">
            {% if vinarija %}
                
                <div class="col-md-4">
                    <div class="image-box-vinarije">
                        <img src="/img/{{ vinarija.slika }}" class="img-fluid mx-auto d-block" alt="vinarija-slika">
                    </div>
                    <div class="contact-details mt-5">
                        <ul class="fa-ul">
                            <li><span class="fa-li"><i class="fas fa-mobile-alt"></i></span> {{ vinarija.tel }}</li>
                            <li><span class="fa-li"><i class="fas fa-at"></i></span> {{ vinarija.email }}</li>
                            <li><span class="fa-li"><i class="fas fa-map-marker-alt"></i></span> {{ vinarija.adresa }}</li>
                            <li><span class="fa-li"><i class="fas fa-paper-plane"></i></span><a href="{{ vinarija.sajt }}">{{ vinarija.sajt }}</a></li>
                            <li><span class="fa-li"><i class="fab fa-facebook"></i></span><a href="{{ vinarija.facebook }}">{{ vinarija.facebook }}</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card-transparent">
                        <div class="card-header">
                            {{ vinarija.ime }}
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">O Vinariji</h5>
                            <p class="card-text"> {{ vinarija.opis }}...</p>
                            <a href="/vinarije" class="btn btn-dark">Nazad</a>
                        </div>
                    </div>
                </div>
                 
            {% else %}
                <p>Nema raspolozivih vinarija u bazi</p>
            {% endif %}
            </div>
        </div>
    </section>
    {# End Vinarije-list section #}

    {# Footer section #}
    {{ include('inc/footer.html.twig') }}
    

{% endblock %}